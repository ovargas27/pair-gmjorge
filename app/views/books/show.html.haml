.page-header
  %h1
    = @book.title
    %small
      = @book.author

%p#notice
  = notice
%p
  %b Title:
  = @book.title
%p
  %b ISBN:
  = @book.ISBN
%p
  %b Author:
  = @book.author
%p
  %b Status:
  = @book.status
.btn-group
  = link_to 'Take book', loan_take_path(@book), class: 'btn'
  = link_to 'Edit', edit_book_path(@book), class: 'btn'
  = link_to 'Back', books_path, class: 'btn'
